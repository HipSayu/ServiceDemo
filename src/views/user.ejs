<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>UserCrete</title>
</head>
<body>
<div class="container">
  <div class="row">
      <div class="user-infor-container">
        <form method="POST" action="/users/create-user">
        
                <div class="mt-3  mb-3">
                  <h3>Create a new user</h3>
                </div>
                  <div class="form-group mb-3  col-6">
                      <label for="Username">Username</label>
                      <input type="text" class="form-control" id="Username" name="Username" placeholder="Username" required>
                    </div>
                    <div class="col-6"></div>
                  <div class="form-group mb-3 col-6">
                    <label for="Email">Email address</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter email" required>
                  </div>
                  <div class="col-6"></div>
                  <div class="form-group mb-3 col-6">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
                  </div>
                  <div class="col-12">
                      <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
        </form>
      </div>
        <div class="table-user mt-3">
            <h3>Table user</h3>
          <table class="table table-hover table-bordered border-primary">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
                            
                  <% userList.forEach(function(item,index){ %>
                    <tr>
                      <th scope="row"><%= item.id %></th>
                      <td><%= item.email %></td>
                      <td><%= item.username %></td>
                      <td>
                        <a class="btn btn-warning" href="/Update-User/<%= item.id %>" method="GET">
                          Edit
                        </a>
                        
                        <form style="display:inline;" action="/delete-User/<%= item.id %>" method="POST">
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
            </tbody>
          </table>
      </div>
  </div>
 </div>
</body>
</html>